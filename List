print("DEMONSTRATE USE OF LIST")
print("_______________________")
num=[]
n=int(input('how many numbers to be created in list:'))
for i in range(n):
    num.append(int(input('ENTER NUMBER')))
print('\n\nGiven list:',num)
print('add an item in to the list')
print('enter number and position to insert')
pos=int(input('enter position:'))
n1=int(input('enter value:'))
num.insert(pos,n1)
print('\n list after insertion:',num)
print('\n removing a element from list')
n1=int(input('enter number:'))
num.remove(n1)
print('list after deletion:',num)
print('\n largest and smallest number in the list')
print('largest number:',max(num))
print('smallest number:',min(num))
